# ==========================================
# КОНФИГУРАЦИЯ СЕРВЕРА NOVA DASHBOARD
# ==========================================
# Скопируйте этот файл в .env и заполните значения
# cp .env.example .env

# Порт сервера (по умолчанию 3000)
PORT=3000

# ==========================================
# БАЗА ДАННЫХ PostgreSQL
# ==========================================

# Пользователь PostgreSQL
DB_USER=postgres

# Хост базы данных
DB_HOST=localhost

# Порт PostgreSQL
DB_PORT=5432

# Название базы данных
DB_NAME=ladabot_stats

# ОБЯЗАТЕЛЬНО: Пароль базы данных
# Замените на ваш реальный пароль!
DB_PASSWORD=mikmik98

# ==========================================
# JWT АВТОРИЗАЦИЯ
# ==========================================

# Секретный ключ для подписи токенов (ОБЯЗАТЕЛЬНО замените на случайную строку!)
# Сгенерировать: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-in-production

# Время жизни токена (например: 1h, 7d, 30d)
JWT_EXPIRES_IN=7d
