{
  "name": "ladabot",
  "version": "1.1.0",
  "description": "Ladabot - CRM система для LadaDate",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --mac",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.novabot.ladabot",
    "productName": "Ladabot",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "generic",
      "url": "https://novabot.com.ua/download/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["ru", "en"],
      "language": "1049"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.productivity"
    },
    "files": [
      "**/*",
      "!dist/**"
    ]
  }
}