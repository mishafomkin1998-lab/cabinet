{
  "name": "novabot",
  "version": "1.4.0",
  "description": "Novabot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --mac",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.7",
    "follow-redirects": "^1.15.9",
    "form-data": "^4.0.0",
    "https-proxy-agent": "^7.0.2",
    "proxy-from-env": "^1.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.novabot.app",
    "productName": "Novabot",
    "copyright": "Copyright Â© 2025 Novabot",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": ["**/*.node", "**/*.dll"],
    "publish": {
      "provider": "generic",
      "url": "https://novabot.com.ua/download/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon(2).ico",
      "legalTrademarks": "Novabot",
      "publisherName": "Novabot"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["ru", "en"],
      "language": "1049"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "icon": "assets/icon.icns"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/*/{README,readme,CHANGELOG,changelog}*",
      "!**/*.{md,txt,map}"
    ]
  }
}